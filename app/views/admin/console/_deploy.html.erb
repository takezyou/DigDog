<div class="container">
  <h3>承認待ちリスト</h3>
  <nav class="navbar">
    <form class="form-inline">
      <div class="input-group">
        <input type="text" class="form-control">
        <div class="input-group-append">
          <button type="button" class="btn btn-secondary">Find</button>
        </div>
      </div>
    </form>
  </nav>
  <div class="table-responsive">
    <table class="table table-striped table-sm">
      <thead>
        <tr>
          <th></th>
          <th>Deployment</th>
          <th>Namespace</th>
          <th>作成日時</th>
          <th></th><th></th>
        </tr>
      </thead>
      <tbody>
        <% @check.each do |deploy| %>
        <tr>
          <th><button type="button" class="btn btn-warning btn-sm" disabled>承認待ち</button></th>
          <th><%= deploy.deploy %></th>
          <th><%= deploy.space %></th>
          <th><%= deploy.create_time.strftime("%Y/%m/%d %H:%M:%S") %></th>
          <th></th>
          <th>
            <button type="button" class="btn btn-primary btn-sm" data-toggle="modal" data-target="#editModal">
              edit
            </button>
          </th>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<div class="modal fade" id="editModal" tabindex="-1" role="dialog" aria-labelledby="editModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="editModalLabel">Modal title</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">

      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">閉じる</button>
        <button type="button" class="btn btn-primary">保存</button>
      </div>
    </div>
  </div>
</div>
