<% @page_title = "新規作成 | イメージ選択" %>

<%= javascript_include_tag 'create_wizard/index' %>
<div class="container">
  <h4>Step1: イメージの選択</h4>
  <%= form_with(model: @create, url: create_step2_path, local: true) do |f| %>
  <div id="form-contents" class="">
    <%= f.fields_for :forms do |form| %>
      <%= render 'form_fields', f: form , group: @repo %>
    <% end %>
  </div>
  <div class="form-inline float-right">
    <%= link_to_add_association '+', f, :forms, id: "plus", class: "btn btn-primary rounded-circle shadow"  %>
    <span class="span_create_wizard"></span>
    <%= f.submit "次へ", class: "btn btn-primary" %>
  </div>
  <% end %>
</div>
