<% @page_title = "新規作成 | イメージ選択" %>

<%= javascript_include_tag 'create_wizard/index' %>
<div class="container">
  <h4>Step1: イメージの選択</h4>
  <%= form_with(model: @create, url: create_wizard_step2_path, local: true) do |f| %>
  <%= f.hidden_field :count, value: 0 %>
  <div id="form-contents" class="offset-md-1">
    <div id="form-content[0]">
      <div class="form-inline">
        <%= f.label :image, 'Image:', :class => 'control-label' %>
        <span></span>
        <%= f.select :image, options_for_select(@repo), {}, class: 'form-control' %>
        <div class="d-flex">
          <button type="button" id="minus" class="btn btn-danger shadow">-</button>
        </div>
      </div>
      <hr>
    </div>
  </div>
  <div class="form-inline float-right">
    <button type="button" id="plus" class="btn btn-primary rounded-circle shadow">+</button>
    <span></span>
    <%= f.submit "次へ", class: "btn btn-primary" %>
  </div>
  <% end %>
</div>
